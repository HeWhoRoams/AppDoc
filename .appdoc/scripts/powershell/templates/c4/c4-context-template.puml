@startuml C4_Context
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

' Template: C4 System Context Diagram (Level 1)
' Purpose: Show the software system in its environment with external actors and systems
' Generated by: AppDoc generate-c4-diagrams.ps1

LAYOUT_WITH_LEGEND()

title System Context diagram for {{SYSTEM_NAME}}

' Define the main software system
System({{SYSTEM_ID}}, "{{SYSTEM_NAME}}", "{{SYSTEM_DESCRIPTION}}")

' Define external actors (users)
{{PERSON_DEFINITIONS}}
' Example: Person(user, "System User", "A user of the system")

' Define external systems
{{EXTERNAL_SYSTEM_DEFINITIONS}}
' Example: System_Ext(external_api, "External API", "Third-party service")

' Define relationships
{{RELATIONSHIPS}}
' Example: Rel(user, {{SYSTEM_ID}}, "Uses", "HTTPS")
' Example: Rel({{SYSTEM_ID}}, external_api, "Makes API calls", "HTTPS/REST")

' Layout hints (optional, uncomment to control layout)
' Lay_D(user, {{SYSTEM_ID}})
' Lay_R({{SYSTEM_ID}}, external_api)

@enduml
