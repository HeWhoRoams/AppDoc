@startuml C4_Container
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Container.puml

' Template: C4 Container Diagram (Level 2)
' Purpose: Show major containers (apps, services, databases) within the system
' Generated by: AppDoc generate-c4-diagrams.ps1

LAYOUT_WITH_LEGEND()

title Container diagram for {{SYSTEM_NAME}}

' Define external actors
{{PERSON_DEFINITIONS}}
' Example: Person(user, "End User", "Uses the web interface")

' System boundary
System_Boundary(c1, "{{SYSTEM_NAME}}") {
    {{CONTAINER_DEFINITIONS}}
    ' Example: Container(web_app, "Web Application", "Angular", "Provides user interface")
    ' Example: Container(api, "API Application", "ASP.NET Core", "Handles business logic")
    ' Example: ContainerDb(db, "Database", "SQL Server", "Stores data")
}

' Define external systems
{{EXTERNAL_SYSTEM_DEFINITIONS}}
' Example: System_Ext(external_api, "External API", "Third-party service")

' Define relationships
{{RELATIONSHIPS}}
' Example: Rel(user, web_app, "Uses", "HTTPS")
' Example: Rel(web_app, api, "Makes API calls", "JSON/HTTPS")
' Example: Rel(api, db, "Reads from and writes to", "SQL/TCP")
' Example: Rel(api, external_api, "Integrates with", "HTTPS/REST")

' Layout hints (optional)
' Lay_D(web_app, api)
' Lay_R(api, db)

@enduml
